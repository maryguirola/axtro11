<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="jmd_product_template_form_view" model="ir.ui.view">
            <field name="name">jmd.product.template.product.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <data>
                    <field name="uom_id" position="before">
                        <field name="profit" string="Profit margin" widget="monetary" options="{'currency_field': 'currency_id'}" class="oe_inline"/>
                        <label for="margin_no_tax" string="Profit margin (%)"/>
                        <div>
                            <field name="margin_no_tax" class="oe_inline"/>
                            <label string="%" class="oe_inline"/>
                        </div>
                    </field>

                    <xpath expr="//group[@name='group_lots_and_weight']" position="inside">
                        <field name="height"/>
                        <field name="depth"/>
                        <field name="width"/>
                        <field name="volumetric_weight"/>
                    </xpath>

                </data>
            </field>
        </record>
    </data>
</openerp>
