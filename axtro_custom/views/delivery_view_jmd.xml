<?xml version="1.0" encoding="utf-8"?>
<odoo>

      <record id="view_picking_form_jmd" model="ir.ui.view">
            <field name="name">stock.picking.form.jmd</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field eval="12" name="priority"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='partner_id']" position="replace">
                    <field name="partner_id" attrs="{'invisible': [('picking_type_code', '=', 'internal')]}" on_change="onchange_picking_type(picking_type_id,partner_id)" string="Shipping Address"/>
                </xpath>

                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="jmd_partner_invoice_id_do" string="Billing Address"/>
                </xpath>

                <xpath expr="//field[@name='move_lines']/tree/field[@name='product_id']" position="after">
                    <field name="sale_description"/>
                </xpath>

            </field>
      </record>

      <record id="view_move_picking_tree" model="ir.ui.view">
            <field name="name">stock.move.tree.jmd</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_picking_tree"/>
            <field eval="12" name="priority"/>
            <field name="arch" type="xml">
                <field name="product_id" position="after">
                    <field name="sale_description"/>
                </field>
            </field>
        </record>


</odoo>
