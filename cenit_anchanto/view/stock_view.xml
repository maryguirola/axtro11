<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="view_picking_form_inherit_cenit_anchanto">
        <field name="name">view.picking.form.inherit.cenit.anchanto</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='extra']//field[@name='picking_type_id']" position="after">
                <field name="picking_name" invisible="1"/>
                <field name="is_customer_pickup"
                       attrs="{'invisible':[('picking_name', '!=', 'Delivery Orders')]}"/>
            </xpath>
        </field>
    </record>
</odoo>