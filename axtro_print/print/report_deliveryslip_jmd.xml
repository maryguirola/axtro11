<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <template id="report_delivery_document" inherit_id="stock.report_delivery_document">
        <xpath expr="//t[@t-call='report.external_layout']" position="replace">
            <t t-call="axtro_print.external_layout">
                <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})" />
                <div class="page">

                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <td style="align=left;" width="60%">
                                    <span><strong>Bill To:</strong><br/></span>

                                    <t t-if="o.jmd_partner_invoice_id_do.is_company">
                                        <span t-field="o.jmd_partner_invoice_id_do.name"/><br/>
                                    </t>
                                    <t t-if="o.jmd_partner_invoice_id_do.parent_name">
                                        <span t-field="o.jmd_partner_invoice_id_do.parent_name"/><br/>
                                    </t>

                                    <address t-field="o.jmd_partner_invoice_id_do"
                                        t-field-options='{"widget": "contact", "fields": ["address"], "no_marker": true}' />
                                    <span>Attn. : <span t-field="o.jmd_partner_invoice_id_do.name"/></span><br/>
                                    <span>Tel. : <span t-field="o.jmd_partner_invoice_id_do.phone"/></span><br/>
                                </td>
                                <td style="align=left;" width="40%">
                                    <span><strong>Ship To:</strong><br/></span>

                                    <t t-if="o.partner_id.is_company">
                                        <span t-field="o.partner_id.name"/><br/>
                                    </t>
                                    <t t-if="o.partner_id.parent_name">
                                        <span t-field="o.partner_id.parent_name"/><br/>
                                    </t>

                                    <address t-field="o.partner_id"
                                        t-field-options='{"widget": "contact", "fields": ["address"], "no_marker": true}' />
                                    <span>Attn. : <span t-field="o.partner_id.name"/></span><br/>
                                    <span>Tel. : <span t-field="o.partner_id.phone"/></span><br/>
                                </td>
                            </tr>
                        </thead>
                    </table>

                    <div class="row" style="margin-bottom:1cm">
                        <div class="col-xs-6">
                            <h3>
                                <span>Delivery Order: </span><span t-field="o.name"/>
                            </h3>
                        </div>
                        <div class="col-xs-6">
                            <div name="right_box">
                                 <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', o.name, 600, 100)" style="width:300px;height:50px;"/>
                            </div>
                        </div>
                    </div>

                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th><strong>Customer PO No</strong></th>
                                <th name="td_sched_date_h"><strong>Scheduled Date</strong></th>
                                <th><strong>Invoice No</strong></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <span t-if="o.sale_id and o.sale_id.jmd_po_number_so">
                                        <span t-field="o.sale_id.jmd_po_number_so"/>
                                    </span>
                                </td>
                                <td name="td_sched_date">
                                    <p t-esc="time.strftime('%d/%m/%Y', time.strptime(o.min_date,'%Y-%m-%d %H:%M:%S'))"/>
                                </td>
                                <td>
                                    <span t-if= "o.sale_id.invoice_ids and o.sale_id.invoice_ids[0].number">
                                        <span t-field="o.sale_id.invoice_ids[0].number"/>
                                    </span>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <table class="table table-condensed mt48" t-if="not o.pack_operation_ids">
                        <thead>
                            <tr>
                                <th><strong>Description</strong></th>
                                <th><strong>Location</strong></th>
                                <th class="text-right"><strong>Quantity</strong></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="o.move_lines" t-as="move">
                                <td>
                                    <t t-if="move.sale_description">
                                        <span t-field="move.sale_description"/>
                                    </t>
                                    <t t-if="not move.sale_description">
                                        <span t-field="move.product_id"/>
                                    </t>
                                </td>
                                <td><span t-field="move.location_id"/></td>
                                <td class="text-right">
                                    <span t-field="move.product_uom_qty"/>
                                    <span t-field="move.product_uom"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <table class="table table-condensed mt48" t-if="o.pack_operation_ids">
                        <t t-set="has_serial_number" t-value="o.pack_operation_ids.filtered('pack_lot_ids')" groups="stock.group_production_lot"/>
                        <thead>
                            <tr>
                                <th><strong>Item No</strong></th>
                                <th><strong>Description</strong></th>
                                <th style="text-align:center;"><strong>Barcode</strong></th>
                                <th t-if="has_serial_number"><strong>Serial Number</strong></th>
                                <th class="text-right"><strong>Quantity</strong></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="o.pack_operation_ids" t-as="pack_operation">
                                <td>
                                    <span t-field="pack_operation.product_id.default_code"></span>
                                </td>
                                <td>
                                    <!--<span t-field="pack_operation.product_id.name"/>-->
                                    <t t-if="pack_operation.sale_description">
                                        <span t-field="pack_operation.sale_description"/>
                                    </t>

                                    <t t-if="not pack_operation.sale_description">
                                        <span t-field="pack_operation.product_id.name"/>
                                    </t>

                                </td>
                                <td style="text-align: center;">
                                    <t t-if="pack_operation.product_id.barcode">
                                        <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', pack_operation.product_id.barcode, 600, 100)" style="width:200px;height:50px"/>
                                        <br/><span t-field="pack_operation.product_id.barcode"></span>
                                    </t>
                                </td>
                                <t t-if="has_serial_number">
                                    <td t-if="pack_operation.pack_lot_ids">
                                        <table class="table table-condensed" t-if="pack_operation.pack_lot_ids">
                                            <thead>
                                                <tr><th>Lot</th><th>Qty</th></tr>
                                            </thead>
                                            <tr t-foreach="pack_operation.pack_lot_ids" t-as="packlot">
                                                <td>
                                                    <span t-field="packlot.lot_id"/>
                                                    <t t-if="not packlot.lot_id">
                                                        <span t-field="packlot.lot_name"/>
                                                    </t>
                                                </td>
                                                <td>
                                                    <span t-field="packlot.qty"/> <t t-if="o.picking_type_id.use_existing_lots and o.state!='done'"> / <span t-field="packlot.qty_todo"/></t>
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                    <td t-if="not pack_operation.pack_lot_ids"/>
                                </t>
                                <td class="text-right">
                                    <span t-field="pack_operation.product_qty"/>
                                    <span t-field="pack_operation.product_uom_id"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="row" name="total">
                        <div class="col-xs-12 pull-right">
                            <table class="table table-condensed">
                                <tr class="border-black">
                                    <td><strong>Total: </strong></td>
                                    <td class="text-right">
                                        <strong t-field="o.quantity_total"/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-xs-5 pull-right">
                            <table class="table table-condensed">
                                <tr>
                                    <td  style="color:#FFFFFF;border: 1px solid #FFFFFF">a</td>
                                </tr>
                                <tr>
                                    <td  style="color:#FFFFFF;border: 1px solid #FFFFFF">a</td>
                                </tr>

                                <tr>
                                    <td><strong>Confirmed Received and Accepted By: </strong></td>
                                </tr>
                                <tr>
                                    <td  style="color:#FFFFFF;border: 1px solid #FFFFFF">a</td>
                                </tr>
                                <tr>
                                    <td  style="color:#FFFFFF;border: 1px solid #FFFFFF">a</td>
                                </tr>
                                <tr>
                                    <td  style="color:#FFFFFF">a</td>
                                </tr>
                                <tr class="border-black">
                                    <td>Company's Chop and Signature</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <Strong>Notes</Strong><br/>
                    <p t-field="o.note"/>
                </div>
            </t>
        </xpath>
    </template>

</odoo>
