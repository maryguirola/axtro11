<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
<template id="report_saleorder_document_jmd">
    <t t-call="axtro_print.external_layout">
        <t t-set="doc" t-value="doc.with_context({'lang':doc.partner_id.lang})" />
        <br/>
        <br/>
        <div class="page">
            <div class="oe_structure"/>
                <table class="table table-condensed">
                <thead>
                    <tr>
                        <td style="align=left;" width="60%">
                            <span><strong>Bill To:</strong><br/></span>
                            <span t-field="doc.partner_invoice_id.parent_name"/><br/>
                            <address t-field="doc.partner_id"
                                t-field-options='{"widget": "contact", "fields": ["address"], "no_marker": true}' />
                            <span>Attn. : <span t-field="doc.partner_invoice_id.name"/></span><br/>
                            <span>Tel. : <span t-field="doc.partner_invoice_id.phone"/></span><br/>
                        </td>
                        <td style="align=left;" width="40%">
                            <span><strong>Ship To:</strong><br/></span>
                            <span t-field="doc.partner_shipping_id.parent_name"/><br/>
                            <address t-field="doc.partner_shipping_id"
                                t-field-options='{"widget": "contact", "fields": ["address"], "no_marker": true}' />
                            <span>Attn. : <span t-field="doc.partner_shipping_id.name"/></span><br/>
                            <span>Tel. : <span t-field="doc.partner_shipping_id.phone"/></span><br/>
                        </td>
                    </tr>
                </thead>
            </table>

            <h3>
                <span t-if="doc.state not in ['draft','sent']">Order # </span>
                <span t-if="doc.state in ['draft','sent']">Quotation # </span>
                <span t-field="doc.name"/>
            </h3>

            <div class="row mt32 mb32" id="informations">
                <div t-if="doc.client_order_ref" class="col-xs-3">
                    <strong>Your Reference:</strong>
                    <p t-field="doc.client_order_ref"/>
                </div>
                <div t-if="doc.date_order" class="col-xs-3">
                    <strong t-if="doc.state not in ['draft','sent']">Date Ordered:</strong>
                    <strong t-if="doc.state in ['draft','sent']">Quotation Date:</strong>
                    <p t-esc="time.strftime('%d/%m/%Y', time.strptime(doc.date_order,'%Y-%m-%d %H:%M:%S'))"/>
                </div>
                <div t-if="doc.user_id.name" class="col-xs-3">
                    <strong>Salesperson:</strong>
                    <p t-field="doc.user_id"/>
                </div>
                <div name="payment_term" t-if="doc.payment_term_id" class="col-xs-3">
                    <strong>Payment Term:</strong>
                    <p t-field="doc.payment_term_id"/>
                </div>
            </div>

            <!-- Is there a discount on at least one line? -->
            <t t-set="display_discount" t-value="any([l.discount for l in doc.order_line])"/>

            <table class="table table-condensed">
                <thead>
                    <tr>
                        <th>Item No</th>
                        <th>Description</th>
                        <t t-if="doc.jmd_print_barcode">
                            <th>Barcode</th>
                        </t>
                        <th class="text-right">Quantity</th>
                        <th class="text-right">Unit Price</th>
                        <th t-if="doc.jmd_nodiscount_so" class="text-right">Disc.(%)</th>
                        <!--<th t-if="display_discount" class="text-right" groups="sale.group_discount_per_so_line">Disc.(%)</th>-->
                        <!--<th class="text-right">Taxes</th>-->
                        <th class="text-right">Price</th>
                    </tr>
               </thead>
               <tbody class="sale_tbody">
                   <t t-set="i" t-value="1"/>
                    <t t-foreach="doc.order_line" t-as="l">
                        <tr t-if="l.product_uom_qty">
                            <td>
                                <span t-esc="i" />
                            </td>
                            <td>
                               <span t-field="l.name"/>
                            </td>
                            <t t-if="doc.jmd_print_barcode">
                                <td><span t-field="l.jmd_product_barcode"/></td>
                            </t>
                            <td class="text-right">
                                <span t-field="l.product_uom_qty"/>
                                <span groups="product.group_uom" t-field="l.product_uom"/>
                            </td>
                            <td class="text-right">
                                <span t-field="l.price_unit"/>
                            </td>
                            <td t-if="doc.jmd_nodiscount_so" class="text-right">
                                <span t-field="l.discount"/>
                            </td>
                            <!--<td class="text-right">-->
                                <!--<span t-esc="', '.join(map(lambda x: (x.description or x.name), l.tax_id))"/>-->
                            <!--</td>-->
                            <td class="text-right">
                                <span t-field="l.price_subtotal"
                                    t-field-options='{"widget": "monetary", "display_currency": "doc.pricelist_id.currency_id"}'/>
                            </td>
                            <t t-set="i" t-value="i+1"/>
                        </tr>
                    </t>
                </tbody>
            </table>

            <div class="row" name="total">
                <div class="col-xs-4 pull-right">
                    <table class="table table-condensed">
                        <tr class="border-black">
                            <td>Sub-Total: </td>
                            <td class="text-right">
                                <span t-field="doc.amount_untaxed"
                                    t-field-options='{"widget": "monetary", "display_currency": "doc.pricelist_id.currency_id"}'/>
                            </td>
                        </tr>
                        <tr>
                            <td>7% GST: </td>
                            <td class="text-right">
                                <span t-field="doc.amount_tax"
                                    t-field-options='{"widget": "monetary", "display_currency": "doc.pricelist_id.currency_id"}'/>
                            </td>
                        </tr>
                        <tr class="border-black">
                            <td><strong>Total Inc GST: </strong></td>
                            <td class="text-right">
                                <span t-field="doc.amount_total"
                                    t-field-options='{"widget": "monetary", "display_currency": "doc.pricelist_id.currency_id"}'/>
                            </td>
                        </tr>
                    </table>
                    <table class="table table-condensed">
                        <tr>
                            <td  style="color:#FFFFFF;border: 1px solid #FFFFFF">a</td>
                        </tr>
                        <tr>
                            <td  style="color:#FFFFFF;border: 1px solid #FFFFFF">a</td>
                        </tr>

                        <tr>
                            <td><strong>Confirmed and Accepted By: </strong></td>
                        </tr>
                        <tr>
                            <td  style="color:#FFFFFF;border: 1px solid #FFFFFF">a</td>
                        </tr>
                        <tr>
                            <td  style="color:#FFFFFF;border: 1px solid #FFFFFF">a</td>
                        </tr>
                        <tr>
                            <td  style="color:#FFFFFF">a</td>
                        </tr>
                        <tr class="border-black">
                            <td>Company's Chop and Signature</td>
                        </tr>
                    </table>
                </div>
            </div>

            <p t-field="doc.note" />
            <!--<p t-if="doc.payment_term_id.note">-->
                <!--<strong>Payment terms: </strong><span t-field="doc.payment_term_id.note"/>-->
            <!--</p>-->
            <!--<p t-if="not doc.payment_term_id and doc.partner_id.property_payment_term_id">-->
                <!--<strong>Payment terms: </strong><span t-field="doc.partner_id.property_payment_term_id.note"/>-->
            <!--</p>-->
            <p id="fiscal_position_remark" t-if="doc.fiscal_position_id and doc.fiscal_position_id.note">
                <strong>Fiscal Position Remark:</strong>
                <span t-field="doc.fiscal_position_id.note"/>
            </p>
            <div class="oe_structure"/>
        </div>
    </t>
</template>


<template id="report_saleorder" inherit_id="sale.report_saleorder">

    <xpath expr="//t[@t-call='sale.report_saleorder_document']" position="replace">
        <t t-call="axtro_print.report_saleorder_document_jmd"/>
    </xpath>

</template>


</data>
</openerp>
