<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
<template id="report_invoice_document_jmd">
    <t t-call="web.external_layout">

        <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})" />
        <div class="page">
            <div class="oe_structure"/>

            <table class="table table-condensed">
                <thead>
                    <tr>
                        <td style="align=left;" width="60%">
                            <span><strong>Bill To:</strong><br/></span>
                            <span t-if="o.partner_id.is_company"><span t-field="o.partner_id.name"/><br/></span>
                            <span t-if="o.partner_id.parent_name"><span t-field="o.partner_id.parent_name"/><br/></span>
                            <address t-field="o.partner_id"
                                t-field-options='{"widget": "contact", "fields": ["address"], "no_marker": true}' />
                            <span>Attn. : </span><span t-field="o.partner_id.name"/><br/>
                            <span>Tel. : </span><span t-field="o.partner_id.phone"/><br/>
                        </td>
                        <td style="align=left;" width="40%">
                            <span><strong>Ship To:</strong><br/></span>
                            <span t-if="o.jmd_partner_shipping_id.parent_name"><span t-field="o.jmd_partner_shipping_id.parent_name"/><br/></span>
                            <address t-field="o.jmd_partner_shipping_id"
                                t-field-options='{"widget": "contact", "fields": ["address"], "no_marker": true}' />
                            <span>Attn. : <span t-field="o.jmd_partner_shipping_id.name"/></span><br/>
                            <span>Tel. : <span t-field="o.jmd_partner_shipping_id.phone"/></span><br/>
                        </td>
                    </tr>
                </thead>
            </table>


            <h3>
                <span t-if="o.type == 'out_invoice' and (o.state == 'open' or o.state == 'paid')">Tax Invoice</span>
                <span t-if="o.type == 'out_invoice' and o.state == 'proforma2'">PRO-FORMA</span>
                <span t-if="o.type == 'out_invoice' and o.state == 'draft'">Draft Invoice</span>
                <span t-if="o.type == 'out_invoice' and o.state == 'cancel'">Cancelled Invoice</span>
                <span t-if="o.type == 'out_refund'">Refund</span>
                <span t-if="o.type == 'in_refund'">Vendor Refund</span>
                <span t-if="o.type == 'in_invoice'">Vendor Bill</span>
                <span t-field="o.number"/>
            </h3>

            <div class="row mt32 mb32">

                <div class="col-xs-3">
                    <strong>Invoice Date:</strong>
                    <p t-field="o.date_invoice"/>
                </div>

                <div class="col-xs-3">
                    <strong>Payment Terms:</strong>
                    <p t-field="o.payment_term_id.note"/>
                </div>

                <div class="col-xs-3">
                    <strong>Salesperson:</strong>
                    <p t-field="o.user_id"/>
                </div>

                <div class="col-xs-3">
                    <strong>P/O Number:</strong>
                    <p t-field="o.jmd_po_number"/>
                </div>

            </div>

            <!-- Is there a discount on at least one line? -->
            <t t-set="display_discount" t-value="any([l.discount for l in o.invoice_line_ids])"/>

            <table class="table table-condensed">
                <thead>
                    <tr>
                        <th>Item No</th>
                        <th>Description</th>
                        <t t-if="o.jmd_print_barcode">
                            <th>Barcode</th>
                        </t>
                        <th class="text-right">Quantity</th>
                        <th class="text-right">Unit Price</th>
                        <th t-if="o.jmd_nodiscount" class="text-right">Disc.(%)</th>
                        <th class="text-right">Amount</th>
                    </tr>
                </thead>
                <tbody class="invoice_tbody">
                    <t t-set="i" t-value="1"/>
                    <tr t-foreach="o.invoice_line_ids" t-as="l">
                        <td>
                            <span t-esc="i" />
                        </td>
                        <td><span t-field="l.name"/></td>
                        <t t-if="o.jmd_print_barcode">
                            <td><span t-field="l.jmd_product_barcode"/></td>
                        </t>
                        <td class="text-right">
                            <span t-field="l.quantity"/>
                            <span t-field="l.uom_id"  groups="product.group_uom"/>
                        </td>
                        <td class="text-right">
                            <span t-field="l.price_unit"/>
                        </td>
                        <t t-if="o.jmd_nodiscount">
                            <td class="text-right">
                                <span t-field="l.discount"/>
                            </td>
                        </t>
                        <td class="text-right">
                            <span t-field="l.price_subtotal" 
                                t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                        </td>
                        <t t-set="i" t-value="i+1"/>
                    </tr>
                </tbody>
            </table>

            <div class="row">
                <div class="col-xs-4 pull-right">
                    <table class="table table-condensed">
                        <tr class="border-black">
                            <td><strong>Sub-Total:</strong></td>
                            <td class="text-right">
                                <span t-field="o.amount_untaxed" t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                            </td>
                        </tr>
                        <t t-foreach="o._get_tax_amount_by_group()" t-as="amount_by_group">
                            <tr>
                                <td>7% GST:</td>
                                <td class="text-right">
                                    <span t-esc="amount_by_group[1]"/>
                                </td>
                            </tr>
                        </t>
                        <tr class="border-black">
                            <td><strong>Total Inc GST:</strong></td>
                            <td class="text-right">
                                 <span t-field="o.amount_total" t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>


            <p t-if="o.comment">
                <span t-field="o.comment"/>
            </p>

            <p t-if="o.fiscal_position_id.note">
                <strong>Fiscal Position Remark:</strong>
                <span t-field="o.fiscal_position_id.note"/>
            </p>

            <div class="oe_structure"/>
        </div>
    </t>
</template>


<template id="report_invoice_with_payments" inherit_id="account.report_invoice_with_payments">

    <xpath expr="//t[@t-call='account.report_invoice_document_with_payments']" position="replace">
        <t t-call="axtro_print.report_invoice_document_jmd" t-lang="o.partner_id.lang"/>
    </xpath>

</template>


<template id="account_invoice_report_duplicate" inherit_id="axtro_print.report_invoice_document_jmd" primary="True">
    <xpath expr="//h3" position="replace">
        <h2>
            <span>Duplicate</span>
            <span t-field="o.number"/>
        </h2>
    </xpath>
</template>


</data>
</openerp>
