<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>

<template id="axtro_print.external_layout" inherit_id="report.external_layout">

    <xpath expr="//t[@t-call='report.external_layout_header']" position="replace">
        <t t-call="axtro_print.external_layout_header" />
    </xpath>

    <xpath expr="//t[@t-call='report.external_layout_footer']" position="replace">
        <t t-call="axtro_print.external_layout_footer" />
    </xpath>

</template>


<template id="external_layout_header">
    <div class="header">

        <div class="row">
            <div class="col-xs-5">
                <img t-if="company.jmd_header_logo" t-att-src="'data:image/png;base64,%s' % company.jmd_header_logo" style="max-height:300px;"/>
            </div>

            <div class="col-xs-3"/>

            <div class="col-xs-4" name="company_address">
                <div style="line-height:16px;color:#2B2C73;margin-top:80px;">
                    <div style="font-weight:bold;font-size:1.2em">
                        <span t-field="company.partner_id"/><br/>
                    </div>
                    <span>
                        <strong>O </strong><span t-field="company.phone"/><strong> F </strong><span t-field="company.fax"/>
                    </span><br/>
                    <span t-field="company.street"/><br/>
                    <span t-field="company.street2"/><br/>
                    <span t-field="company.city"/>
                    <span>  </span><span t-field="company.zip"/><br/>
                    <div style="line-height:30px">
                        <span>Co/GST Reg No: </span><span t-field="company.vat"/><br/>
                    </div>
                    <span t-field="company.website"/><br/>
                    <span>Email: </span><span t-field="company.email"/>
                </div>
            </div>
        </div>
    </div>
</template>

<template id="external_layout_footer">
    <div class="footer">
        <div class="text-center" style="border-top: 1px solid black;" name="top">
            <div class="row">
                <br/>
                <div class="col-xs-4">
                    <img t-if="company.jmd_footer_logo" t-att-src="'data:image/png;base64,%s' % company.jmd_footer_logo" style="max-height: 30px; position: absolute; left: 10px;"/>
                </div>

                <div class="col-xs-4" style="text-align: center">
                    <span>Page: </span>
                    <span class="page"/>
                    <span>/</span>
                    <span class="topage"/>
                </div>
                <div class="col-xs-4"/>
            </div>
        </div>
    </div>
</template>

<template id="external_layout_footer_no_signature" inherit_id="axtro_print.external_layout_footer" primary="True">
    <xpath expr="//div[@name='top']" position="before">
        <div class="text-center">
            <span>*** THIS DOCUMENT IS COMPUTER GENERATED. NO SIGNATURE IS REQUIRED ***</span>
        </div>
    </xpath>
</template>


<template id="axtro_print.external_layout_no_signature" inherit_id="axtro_print.external_layout" primary="True">

    <xpath expr="//t[@t-call='axtro_print.external_layout_footer']" position="replace">
        <t t-call="axtro_print.external_layout_footer_no_signature" />
    </xpath>

</template>


</data>
</odoo>
